{
    "version": 2,
    "name": "favorite-show-reminder",
    "builds": [
        {
            "src": "app/**/*.ts",
            "use": "@now/node"
        },
        {
            "src": "app/package.json",
            "use": "@now/node"
        },
        {
            "src": "www/package.json",
            "use": "@now/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/app/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/www/$1"
        }
    ],
    "env": {
        "TMDB_KEY": "@tmdb-key",
        "MLAB_TASK_COLLECTION_URI": "@mlab-tasks-uri"
    }
}