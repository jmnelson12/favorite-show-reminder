{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "lib": [
            "dom",
            "DOM.Iterable",
            "ESNext"
        ],
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "/node_modules/"
    ],
    "include": [
        "*.ts",
        "**/*.ts"
    ]
}